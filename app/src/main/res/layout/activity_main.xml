<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <Button
            android:id="@+id/button_01"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/color_button_01"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/color_button_02"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_03"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/color_button_03"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_04"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/color_button_04"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_05"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/color_button_05"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_06"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/color_button_06"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_07"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/color_button_07"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_08"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/color_button_08"
            android:padding="2dp"
            android:text="Click" />

        <Button
            android:id="@+id/button_09"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/color_button_09"
            android:padding="2dp"
            android:text="Click" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout_interno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_textView"/>

    <EditText
        android:id="@+id/Edit_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba su usuario aquí"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_textView"/>

    <EditText
        android:id="@+id/Edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba su correo aquí" />

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enviar"/>
    </LinearLayout>

</LinearLayout>




