<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Contenedor2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".NewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Factura"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor=" #1e208a"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del producto"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        android:textColor="#1e208a"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/color_button_01" />


        <TextView
            android:id="@+id/tv_02"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/color_button_02" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/color_button_03"
            />

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/color_button_04"/>

        <TextView
            android:id="@+id/tv_05"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/color_button_05"/>

        <TextView
            android:id="@+id/tv_06"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/color_button_06"/>

        <TextView
            android:id="@+id/tv_07"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/color_button_07"/>

        <TextView
            android:id="@+id/tv_08"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/color_button_08"/>

        <TextView
            android:id="@+id/tv_09"
            android:layout_width="@dimen/standard_width"
            android:layout_height="@dimen/standard_height"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/color_button_09"/>
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout_interno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nTV_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:textColor="@color/color_textView"/>

        <TextView
            android:id="@+id/nTV_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo ElectrÃ³nico:"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:textColor="@color/color_textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de productos:"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:textColor="@color/color_textView"/>

    </LinearLayout>


</LinearLayout>